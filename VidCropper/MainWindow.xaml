<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VidCropper"
        xmlns:UserControls="clr-namespace:VidCropper.UserControls" x:Name="window" x:Class="VidCropper.MainWindow"
        mc:Ignorable="d"
        Title="VidCropper" MinWidth="750" MinHeight="350" Height="510" Width="1200" Top="0" Left="0">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="200" Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>


        <UserControls:MediaPlayer x:Name="mediaPlayer" Grid.Column="1" Margin="0"/>
        <UserControls:ControlPanel x:Name="controlPanel" Margin="0"/>

    </Grid>
</Window>
